{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "inlineSources": true,
    "sourceMap": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "dist-js",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}